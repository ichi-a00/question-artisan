        <li><%= link_to 'customerログイン', new_customer_session_path, class: 'fas fa-blog nav-link text-light' %></li>
        <li><%= link_to 'customerログアウト', destroy_customer_session_path, method: :delete, class: 'fas fa-bug nav-link text-light' %></li>
        <% if customer_signed_in? %>
          <li><%= link_to 'カスタママイページ', customer_path(current_customer), class: 'fas fa-sync nav-link text-light' %></li>
        <% end %>
        <li><%= link_to 'カスタマQ', questions_path, class: 'fas fa-bullhorn nav-link text-light' %></li>
