<h1>Customers</h1>

<table class="table table-striped bg-light">
  <thead>
    <tr>
      <th>id</th>
      <th>image</th>
      <th>nickname</th>
      <th>email</th>
      <th>rank</th>
      <th>exp</th>
      <th>is_valid</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= attachment_image_tag customer, :image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %></td>
        <td><%= customer.nickname %></td>
        <td><%= customer.email %></td>
        <td><%= customer.rank %></td>
        <td><%= customer.experience_point %></td>
        <td><%= customer.is_valid %></td>
        <td><%= link_to 'Show', admin_customer_path(customer) %></td>
        <td><%= link_to 'Edit', edit_admin_customer_path(customer) %></td>
      </tr>
    <% end %>
    <%= paginate @customers %>
  </tbody>
</table>