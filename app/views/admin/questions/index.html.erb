<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Title</th>
      <th>Sentence</th>
      <th>Format</th>
      <th>Explanation</th>
      <th>Question image</th>
      <th>Answer image</th>
      <th>Answered time</th>
      <th>Correct answered time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.customer.nickname %></td>
        <td><%= question.title %></td>
        <td><%= question.sentence %></td>
        <td><%= question.format %></td>
        <td><%= question.explanation %></td>
        <td><%= attachment_image_tag question, :question_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= attachment_image_tag question, :answer_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= question.answered_time %></td>
        <td><%= question.correct_answered_time %></td>
        <td><%= link_to 'Show', admin_question_path(question) %></td>
        <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
        <td><%= link_to 'Destroy', admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% paginate @questions %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_admin_question_path %>

<br>
<%= form_with url: import_admin_questions_path, html: { method: :post, multipart: true } do |f| %>
  <%= f.file_field :file %>
  <%= f.submit "import csv", class:"btn btn-success" %>
<% end %>
<br>
<%= link_to "export csv", admin_questions_path(format: :csv) %>