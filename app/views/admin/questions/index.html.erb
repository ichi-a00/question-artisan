<div class="d-flex justify-content-between align-items-center">
  <h1>Questions</h1>
  <div><%= link_to 'New Question', new_admin_question_path, class:"btn btn-success" %></div>
</div>
<table class="table table-sm table-striped bg-light">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Title</th>
      <th>Sentence</th>
      <th>Format</th>
      <th>Explanation</th>
      <th>Question image</th>
      <th>Answered time</th>
      <th>Correct answered time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.customer.nickname %></td>
        <td><%= question.title %></td>
        <td><%= question.sentence %></td>
        <td><%= question.format %></td>
        <td><%= question.explanation %></td>
        <td><%= attachment_image_tag question, :question_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg", size: "100*100" %></td>
        <td><%= question.answered_time %></td>
        <td><%= question.correct_answered_time %></td>
        <td><%= link_to 'Show', admin_question_path(question) %></td>
        <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
        <td><%= link_to 'Destroy', admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%= paginate @questions %>
  </tbody>
</table>