
<p>問題：<%= @question.sentence %></p>


<%= form_with url: result_question_path, local: true do |f| %>
  <% case @question.format
    when "writing" %>
      <p>記述</p>
      <%= f.text_field :your_answers %>
    <% else %>
      <p>選択肢</p>
      <ul><li><%= f.collection_check_boxes :your_answers, @question.answers.all, :id, :content %></li></ul>
  <% end %>

<%= f.submit "回答" %>
<% end %>

<%= link_to 'Back', questions_path %>