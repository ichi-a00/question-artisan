<h3>Question Search</h3>
<div class='search_tag mb-1'>
  <%= form_with url: questions_path, method: :get do |f| %>
    <%= f.text_field :content, placeholder: 'キーワード', value: @content, class:'index_search' %>
  <% end %>
</div>

<div class="mb-4">
  <% if @tags.present? %>
    <i class="fas fa-tags"></i>
    <% @tags.each do |tag| %>
      <%= link_to "#{tag.name}(#{tag.taggings_count})", questions_path(content: tag.name), class:"badge rounded-pill bg-primary text-light my-1" %>
    <% end %>
  <% else %>
    <p>登録されているタグはありません</p>
  <% end %>
</div>

<h3>Questions</h3>

<div class="search_tbody">
  <%= render "list", questions: @questions %>
</div>