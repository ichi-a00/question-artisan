<% if customer_signed_in? %>
  <% if question.favorited_by?(current_customer) %>
    <%= link_to question_favorites_path(question), method: :delete, remote: true do %>
      ★<%= question.favorites.size %> いいね取り消す
    <% end %>
  <% else %>
    <%= link_to question_favorites_path(question), method: :post, remote: true do %>
      ☆<%= question.favorites.size %> いいねする
    <% end %>
  <% end %>
<% end %>