<% if customer_signed_in? %>
  <% if customer != current_customer %>
    <% if current_customer.following?(customer) %>
      <%= link_to "フォロー解除", customer_follows_path(customer), method: :delete, class:"btn btn-danger text-light", remote: true %>
    <% else %>
      <%= link_to "フォローする", customer_follows_path(customer), method: :post, class:"btn btn-success text-light", remote: true %>
     <% end %>
  <% end %>
<% end %>