<% customers.each do |customer| %>
  <div class="card bg-light mb-3">
    <div class="row no-gutters">
      <div class="col-md-2 card-header bg-warning d-flex justify-content-center">
        <div class="">
          <%= attachment_image_tag customer, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        </div>
      </div>
      <div class="col-md-10">
        <div class="card-header bg-warning d-flex justify-content-between align-items-end">
          <div class="d-flex justify-content-start align-items-end">
            <div class="">
              <p class="card-title">Rank:<%= customer.rank %></p>
            </div>
            <div class="mx-3">
              <%= link_to customer_path(customer) do %>
                <h4 class="card-title"><%= customer.nickname %></h4>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-end align-items-end">
            <div class=""><p class="card-title">投稿数:<%= customer.questions_count %></p></div>
            <div class="follow-btn-<%= customer.id %> mx-1"><%= render "customer/follows/follow", customer: customer %></div>
            <div class="mx-1"><i class="fas fa-sign-out-alt fa-lg text-danger"></i><%= link_to customer.following_count, followings_customer_follows_path(customer), class:"btn btn-outline-danger" %></div>
            <div class="mx-1"><i class="fas fa-sign-in-alt fa-lg text-primary"></i><%= link_to customer.followed_count, followers_customer_follows_path(customer), class:"btn btn-outline-primary" %></div>
          </div>
        </div>
        <div class="card-body">
          <%= customer.introduction %>
        </div>
      </div>
    </div>
  </div>
<% end %>
