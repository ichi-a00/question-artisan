<% customers.each do |customer| %>
  <div class="card mb-3">
    <div class="card-header">
      <%= link_to customer_path(customer) do %>
        <%= attachment_image_tag customer, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <% end %>
      <p class="card-text"><%= customer.nickname %></p>
    </div>
    <div class="card-body">
      <p class="card-text"><%= customer.introduction %></p>
      <%= link_to customer.following_count, followings_customer_follows_path(customer), class:"btn btn-outline-primary" %>
      <%= link_to customer.followed_count, followers_customer_follows_path(customer), class:"btn btn-outline-primary" %>
      <p class="follow-btn-<%= customer.id %>"><%= render "customer/follows/follow", customer: customer %></p>
    </div>
  </div>
<% end %>
