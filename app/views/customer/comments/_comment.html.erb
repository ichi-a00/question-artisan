<% comments.each do |com| %>
  <tr>
    <td>
      <%= link_to customer_path(com.customer) do %>
        <%= attachment_image_tag com.customer, :image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></br>
        <%= com.customer.nickname %>
      <% end %>
    </td>
    <td><%= com.body %></td>
    <td><%= com.created_at.strftime('%Y/%m/%d %H:%M') %></td>
    <td>
      <% if com.customer == current_customer %>
          <%= link_to "削除", question_comment_path(com.question, com), method: :delete, remote: true, class:"btn btn-sm btn-danger" %>
      <% end %>
    </td>
  <tr>
<% end %>
<%= paginate comments %>